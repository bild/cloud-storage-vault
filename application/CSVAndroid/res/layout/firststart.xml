<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget27"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
>
<TextView
android:id="@+id/firstStart_header"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Configuration"
android:layout_gravity="center"
android:textStyle="bold"
android:singleLine="true"
android:textSize="25sp"
>
</TextView>
<TextView
android:id="@+id/configuration_roottext"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Root directory:"
>
</TextView>
<Button
android:id="@+id/firstStart_new"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Create new root directory"
>
</Button>
<Button
android:id="@+id/firstStart_import"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Import existing root directory"
>
</Button>
<Button
android:id="@+id/firstStart_show"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:visibility="invisible"
android:text="Export root keys"
>
</Button>
</LinearLayout>
